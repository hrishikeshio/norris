@{
    ViewBag.Title = "Home Page";
}

<div style="padding-top:25%;" id="norris_container" ng-app="norrisFacts">

    <div ng-controller="FactController as factCtrl">
        <div class="row">
            <div class="col-md-8">
        <blockquote>
            <p style="font-size:42px;">{{factCtrl.fact.Text}}</p>
            <footer> - {{factCtrl.fact.Author}}</footer>
        </blockquote>
        <div id="comments" ng-repeat="comment in factCtrl.comments">
            <blockquote>
                <p style="font-size:24px;" >{{comment.Text}}</p>
                <footer> - {{comment.USER_EMAIL}}</footer>
        </blockquote>
        </div>
        <form ng-submit="factCtrl.addnew()">
            <input type="text" id="commentText" ng-model="factCtrl.commentText"/>
            <input type="submit" class="btn btn-small"/>
        </form>
        <p><a href="" class="btn btn-primary btn-lg" ng-click="factCtrl.nextFact()">Show more &raquo;</a></p>
            </div>
            <div class="col-md-4">
                <highchart id="chart1" config="chartConfig" style="height:200px;"></highchart>
            </div>
    </div>
    
</div>
    </div>


