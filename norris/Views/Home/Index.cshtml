@{
    ViewBag.Title = "Home Page";
}

<div style="padding-top:25%;" id="norris_container" ng-app="norrisFacts">

    <div ng-controller="FactController as factCtrl">
        <div class="row">
            <div class="col-md-8">
                <blockquote>
                    <p style="font-size:42px;" ng-model="factCtrl.fact.Text" class="giflink-to-be" data-src="http://tholman.com/giflinks/img/specialists.gif" >{{factCtrl.fact.Text}}</p>
                    <footer ng-model="factCtrl.fact.Author"> - {{factCtrl.fact.Author}}</footer>
                    @*<p style="font-size:10px;">Views:{{factCtrl.fact.Views}}</p>*@
                </blockquote>
            </div>
            <div class="col-md-4">
                <highchart id="chart1" config="chartConfig" style="height:200px;"></highchart>
            </div>
            <p><a href class="btn btn-primary btn-lg" ng-click="factCtrl.nextFact()" >Show more &raquo;</a></p>
            </div>
      
        </div>
    </div>
    

<script>
window.onload = function() {
    // Add GifLinks to all anchor tags on the page!
    var elements = document.querySelectorAll('.giflink-to-be');
    GifLinks(elements);
}
</script>